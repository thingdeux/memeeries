<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="josh.land.meemeries" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MemeBrowser.MemeBrowser.MainBrowser"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MemeBrowser.MemeFinder.MemeFinderActivity"
            android:label="@string/meme_finder_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MemeBrowser.MemeFinder.MemeViewerActivity"
            android:label="@string/meme_viewer_name" />
    </application>

</manifest>